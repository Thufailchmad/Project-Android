<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".HistoryFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Detail Produk -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:orientation="vertical">

            <!-- Nama Produk -->
            <TextView
                android:id="@+id/detail_history_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Kontak Listrik 3M"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Harga Produk -->
            <TextView
                android:id="@+id/detail_history_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 17.000"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/detail_history_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 17.000"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/detail_history_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 17.000"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout> <!-- Menutup LinearLayout Detail Produk -->
    </LinearLayout> <!-- Menutup LinearLayout Produk -->
</LinearLayout> <!-- Menutup LinearLayout Utama -->
